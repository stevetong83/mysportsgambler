<div id="content">
  <%	 if user_signed_in? %>
  <%	 if current_user.has_role? :admin %>
      <%=	 link_to "New Pick", new_pick_path %>
  <%	 end %>
  <%	 end %>

<div id="featured">

<%=	 render "picks/featured_pick" %>
  </div>

  <div id="picks_content">
    <h2>Upcoming Picks</h2>

    <%	 @upcoming_picks.each do |pick| %>

            <div id="picks_list">
                <span class="details">Game: </span><%=	 link_to pick.game, pick %><br />
                <span class="details">Game Day: </span><span class="format"><%=	 pick.game_day.strftime("%m/%d/%Y")  %></span>
            </div>

        <%	 end %>

    <p align="center">
    <%=	 link_to "See All", upcomingpicks_path %>
    </p>
  </div>


</div>

<div id="sidebar">
  <%=	 render "picks/picks_sidebar" %>
</div>

<div id="content_footer"></div>
