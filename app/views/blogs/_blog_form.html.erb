<%= form_for @blog do |f| %>
    
    <%=	 render "layouts/error_messages", :target => @blog %>
    
    <p>
      <%=	 f.label :title %><br />
      <%=	 f.text_field :title %>
    </p>

    <p>
      <%=	 f.label :author %><br />
      <%=	 f.text_field :author %>
    </p>
    
    <p>
      <%=	 f.label :body %><br />
      <%=	 f.text_area :body, :rows => "25", :cols => "70" %>
    </p>
    
    <p>
      <%=	 f.submit "Submit Blog", class: "btn" %>
    </p>

<%	 end %>