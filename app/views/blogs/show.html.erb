<div id="content">
<h1><%=	 @blog.title %></h1>
Written by <%=	 @blog.author %> on <%=	 @blog.created_at.strftime("%m/%d/%Y") %>
<br />

  <%	 if user_signed_in? %>
      <%	 if current_user.has_role? :admin %>
<%=	 link_to "Edit", edit_blog_path(@blog) %> |
<%=	 link_to "Delete", @blog, confirm: "Are you sure?", method: :delete %>
          <%	 end %>
  <%	 end %>

<div id="content_format">
  <%=	 simple_format(@blog.body) %>
</div>

  <div>
    <h3>Comments</h3>

    <%=	 render @blog.comments %>


    <%=	 render :file => "comments/new" %>
  </div>

</div>

<div id="sidebar">
  <%=	 render "blogs/blogs_sidebar" %>
</div>

<div id="content_footer"></div>
