<div id="content">
    <h1><%=	 @blog.title %></h1>
    <span class="format"><em>Written by <%=	 @blog.author %> on <%=	 @blog.created_at.strftime("%m/%d/%Y") %></em></span><br />
    <p>
      <a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
    </p>

  <%	 if user_signed_in? %>
      <%	 if current_user.has_role? :admin %>
        <%=	 link_to "Edit", edit_blog_path(@blog) %> |
        <%=	 link_to "Delete", @blog, confirm: "Are you sure?", method: :delete %>
      <%	 end %>
  <%	 end %>

<div id="content_format">
  <%=	 simple_format(@blog.body) %>
</div>

  <div id="comments">
    <h3>Comments</h3>

    <p>Comments are closed</p>
  </div>

</div>

<div id="sidebar">
  <%=	 render "blogs/blogs_sidebar" %>
</div>

<div class="clear"></div>
