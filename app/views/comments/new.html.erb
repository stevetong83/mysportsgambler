<%= form_for ([@blog, @blog.comments.build]) do |f| %>
    
    <p>
      <%=	 f.label :name %><br />
      <%=	 f.text_field :name %>
    </p>
    
    <p>
      <%=	 f.label :body, "Comment" %><br />
      <%=	 f.text_area :body, :rows => "4" %>
    </p>
    
    <p>
      <%=	 f.submit "Submit Comment" %>
    </p>

<%	 end %>