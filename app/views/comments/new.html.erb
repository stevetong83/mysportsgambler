<%= form_for ([@blog, @blog.comments.build]) do |f| %>
    
    <p>
      <span class="format"><%=	 f.label :name %></span><br />
      <%=	 f.text_field :name %>
    </p>
    
    <p>
      <span class="format"><%=	 f.label :body, "Comment" %></span><br />
      <%=	 f.text_area :body, :rows => "4" %>
    </p>
    
    <p>
      <%=	 f.submit "Submit Comment" %>
    </p>

<%	 end %>